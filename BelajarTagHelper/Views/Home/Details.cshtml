@model Student

@{
    ViewBag.Title = "Student Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">

    <div class="row justify-content-center">

        <div class="col-lg-6 col-md-8">

            <div class="card shadow">

                <div class="card-header bg-primary text-white">
                    <h2 class="my-2">@Model?.Name</h2>  
                </div>


                <div class="card-body text-center">
                    <img class="card-img mb-3" src="~/images/Student.png" alt="Student Photo"
                         style="width: 100%; max-width: 300px; height: auto; margin: 0 auto;">

                    <h5 class="card-title">Student ID: @Model?.StudentId</h5>  
                    <h5 class="card-title">Email: @Model?.Email</h5> 
                    <h5 class="card-title">Branch: @Model?.Branch</h5>  
                    <h5 class="card-title">Gender: @Model?.Gender</h5>  
                    <h5 class="card-title">Address: @Model?.Address</h5> 
                </div>

                <div class="card-footer bg-transparent">
                    <div class="btn-group" role="group">
                        <a href="#" class="btn btn-secondary">Back</a>
                        <a href="#" class="btn btn-info">Edit</a>
                        <a href="#" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
